{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "bundler",        // совместимо с Expo SDK 54
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,                 // игнорируем ошибки в node_modules
    "resolveJsonModule": true,
    "paths": {
      "app/*": ["./app/*"],
      "assets/*": ["./assets/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "index.js",
    "App.tsx",
    "app",
    "types",
    "plugins",
    "app.config.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}
